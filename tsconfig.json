{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["dom", "es6", "es5", "es2017"],
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true
  },
  "include": ["./src/**/*"],
  "compileOnSave": false
}
